<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="musica.MainWindow"
        Title="Reproductor de música" Width="400" Height="200">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<Button x:Name="PlayButton" Content="Reproducir canción" Width="150" Height="50"/>

		<Button x:Name="PauseButton" Content="Pausar canción" Width="150" Height="50" Margin="0,10,0,0"/>

		<Button x:Name="StopButton" Content="Detener canción" Width="150" Height="50" Margin="0,10,0,0"/>
	</StackPanel>
</Window>
